{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "make DEBUG=1",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build All",
            "type": "shell",
            "command": "make all",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build Clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Run PulseDemo",
            "type": "shell",
            "command": "./objs/x64Darwin17Clang9.0/PulseDemo",
            "dependsOn": [
                "Build All"
            ],
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build/Run PulseDemo",
            "type": "shell",
            "command": "./objs/x64Darwin17Clang9.0/PulseDemo",
            "dependsOn": [
                "Build Clean",
                "Build All"
            ],
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build/Debug PulseDemo",
            "type": "shell",
            "command": "./objs/x64Darwin17Clang9.0/PulseDemo",
            "dependsOn": [
                "Build Clean",
                "Build Debug"
            ],
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}